<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Activity">
        <item name="android:padding">32dp</item>
        <item name="android:color">@color/colorBlack</item>
    </style>

    <style name="ActivityTitle" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textSize">28dp</item>
        <item name="android:height">68dp</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>
    
    <style name="Subtitle1" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18dp</item>
        <item name="android:color">@color/colorPrimaryDark</item>
    </style>

</resources>
